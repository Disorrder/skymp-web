$root = "../../../"
@require $root + "app/utils.styl"

sm = 576px
md = 768px
lg = 992px
xl = 1200px

// adaptive fix
.layout-about
    min-width xl

    .container
        min-width xl

// ---
#about
    position relative

    h2
        font-family "Trajan Pro 3"
        font-weight bolder
        font-size 30px
        line-height 55.49px

    h3
        font-family "Trajan Pro 3"
        font-weight bolder
        font-size 17px
        line-height 32px

    section.section
        position relative
        min-height 100%
        background-size cover
        background-position center top

        .section-inner
            min-height 100%

    .section-header
        color #fff
        font-family "Trajan Pro 3"
        font-size 80px
        line-height 1.1em
        letter-spacing -2px

        &.bg-clip-text
            background-image linear-gradient(to top, #e5c35a 0%, #fff 100%)
            filter drop-shadow(1px 2px 3px #000)

    ul.scrollspy
        position fixed
        left 10px
        top calc(50% - 225px)
        border-width 0 4px
        border-style solid
        border-image linear-gradient(#EBEFF000, #EBEFFCCC, #EBEFF000) 1
        width 60px
        height 450px
        background linear-gradient(#CECFCA00, #CECFCACC, #CECFCA00)
        z-index 100

        li
            width 100%

        a
            padding 5px
            opacity 0.5
            filter drop-shadow(3px 3px 3px black)
            transition filter 0.2s ease

        img
            filter brightness(200)

        a.active
            opacity 1
            filter drop-shadow(5px 5px 5px black)

        a:hover
            opacity 1
            filter drop-shadow(7px 7px 7px black)

// -- sections --
#begin
    h1
        color #efd997
        font-family "Trajan Pro 3"
        font-size 64px
        font-weight 600
        line-height 1.1em
        letter-spacing -2.28px
        margin 0

    // h1.bg-clip-text
    //     background-image linear-gradient(to top, #e5c35a 0%, #fff 100%)

    h1 + img
        max-width 100%

    .section-preview
        $color = #ebe1c2
        $color2 = #fbd05a
        flex 1 1 auto

        .section-preview-icon
            flex-grow 1

            & > img
                max-width 100%

            & > img.glow
                $glow = drop-shadow(0 0 1px $color)
                filter $glow $glow $glow $glow $glow

        .section-preview-text
            text-shadow 1px 3px 5px rgba(0, 0, 0, 1)
            color #fdfaf1
            font-family "Trajan Pro 3"
            font-size 24px
            line-height 27.49px
            letter-spacing -0.97px

        &:hover
            text-decoration none
            color $color2

            // img
            //     filter drop-shadow(0 0 5px #fbd05a) !important

            img.glow
                $glow = drop-shadow(0 0 1px $color)
                filter $glow $glow $glow  $glow  drop-shadow(0 0 5px $color2) !important

            .section-preview-text
                // text-shadow 0 0 17px rgba(251, 208, 90, 0.69)
                color $color2


    .begin-description
        color #000
        opacity 0.9
        font-family Aniron
        font-size 26px
        font-weight 700
        text-shadow 0 0 15px #fff, 0 0 15px #fff
        letter-spacing -0.53px
        transform scaleX(0.8)

        em
            font-style inherit
            font-size 1.26em

        & > p.desc-3
            font-size 1.13em
            letter-spacing -0.7px

    .begin-description-2
        color #fff
        font-family Aniron
        font-size 37px
        font-weight 700
        line-height 58.89px
        text-align right
        background-image linear-gradient(to top, rgba(229, 195, 90, 1) 0%, rgba(255, 255, 255, 1) 100%)
        filter drop-shadow(0 0 3px #000)

        @media screen and (max-width: xl - 0.02)
            font-size 34px

@require 'parts/*'
