section#magic
    background-image url($root+'assets/images/bg-magic.png')

    .section-header
        color #000000
        font-family "Trajan Pro 3"
        text-shadow 0 0 4px #fff, 0 0 4px #fff, 0 0 4px #fff
        font-weight 400

        & > .part-1
            font-size 127px
            line-height 1.2em
            letter-spacing -5.09px
        & > .part-2
            font-size 102px
            line-height 0.5em
            letter-spacing -4.09px

    .row-circle
        position relative
        height 370px
        margin-top -100px
        background-image url('./assets/magic-img/circle-bg.png')
        background-position center
        // background-size contains
        background-repeat no-repeat

        .pivot
            position absolute
            top 0
            left 50%

        .circle-block
            position absolute
            top 0
            left 0

            .block-text
                background rgba(#fff, 0.5)
                color #000
                font-family "Trajan Pro 3"
                font-size 14px
                font-weight bold
                line-height 23.44px
                letter-spacing -0.84px
                text-shadow 0 0 4px #fff, 0 0 4px #fff, 0 0 4px #fff

        .block-1
            transform translate(-540px, 130px)
        .block-2
            transform translate(-330px, 270px)
        .block-3
            transform translate(-107px, 380px)
        .block-4
            transform translate(110px, 270px)
        .block-5
            transform translate(320px, 130px)

    .row-spacing
        height 180px

    .row-description
        color #ffffff
        font-family "Trajan Pro 3"
        font-size 36px
        // font-weight bold
        line-height 55.49px
        letter-spacing -1.45px
        text-shadow 0 2px 10px #000, 0 2px 10px #000, 0 2px 10px #000
