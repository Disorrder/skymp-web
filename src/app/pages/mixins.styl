$root = "../../"


// --- bg clip ---
.bg-clip-text, .bg-clip-text-after:after, .bg-clip-text-before:before
    -webkit-background-clip text
    -webkit-text-fill-color transparent

// --- gradients ---
.bg-grad-down
    background-image linear-gradient(to bottom, rgba(white, 0.4) 0%, rgba(white, 0) 100%)
    background-repeat no-repeat

.bg-grad-right
    background-image linear-gradient(to right, rgba(white, 0.4) 0%, rgba(white, 0) 100%)
    background-repeat no-repeat

.bg-grad-center
    background-image linear-gradient(to right, rgba(white, 0) 0%, rgba(white, 0.4) 50%, rgba(white, 0) 100%)
    background-repeat no-repeat

// --- border gradients
.border-grad-down
    border-width 2px
    border-style solid
    border-bottom-width 0
    border-image linear-gradient(to bottom, rgba(white, 0.8) 0%, rgba(white, 0) 100%) 1

.border-grad-right
    border-width 2px
    border-style solid
    border-right-width 0
    border-image linear-gradient(to right, rgba(white, 0.8) 0%, rgba(white, 0) 100%) 1

.border-grad-center
    border-width 2px 0
    border-style solid
    border-image linear-gradient(to right, rgba(white, 0) 0%, rgba(white, 0.8) 50%, rgba(white, 0) 100%) 1
