div#login.content
    header Hello

    main.container.mt-4
        .row.justify-content-center: .card.col-6: .card-body
            h3.text-center Авторизация
            form#auth.mt-4.mb-0(@submit="login")
                .form-group
                    input.form-control(name="login" placeholder="Логин / почта" v-model="authData.username")
                .form-group
                    input.form-control(name="password" placeholder="Пароль" v-model="authData.password")
                
                button.btn.btn-primary(type="submit" style="width: 100%;" :disabled="formDisabled") Войти
                .form-group.mb-0
                    small.form-text.text-danger.text-center(v-if="statusText === 'ERR_INCORRECT_USERNAME'") Неверное имя пользователя
                    small.form-text.text-danger.text-center(v-if="statusText === 'ERR_INCORRECT_PASSWORD'") Неправильный пароль
            
