$root = "../../../"
@require $root + "app/utils.styl"

#main
    position relative
    background url($root + "assets/images/bg-clouds.png")
    background-repeat repeat
    background-position-x -100px
    // perspective 1px

    h2
        font-family "Trajan Pro 3"
        font-weight bolder
        font-size 30px
        line-height 55.49px

    h3
        font-family "Trajan Pro 3"
        font-weight bolder
        font-size 17px
        line-height 32px

    main
        padding 15px 0
        margin-top 60px

    #carousel
        height calc(100vh - 260px)

    #carousel-footer
        position absolute
        bottom 0
        padding-left 30px
        text-shadow 2px 1px 3px black
        color #ffffff
        font-family "Trajan Pro 3"
        font-size 46px
        line-height 54.25px
        letter-spacing -1.9px

        .text-1
            padding-left 18px
            color #fbf6e5
            font-size 60px
            letter-spacing -2.14px

        .text-2
            color #f1dda3


#btn-play
    display inline-block
    margin-top -15px
    sprite("./assets/btn-play.png", 1, 3, 1)
    width 522px
    height 129px
    // width 534px * 0.8
    // height 135px * 0.8

    &:hover
        spriteFrame(1, 3, 2)

    &:active
        spriteFrame(1, 3, 3)
        transform translateY(2px)


#articles
    min-height 100%

    .panel
        min-height 100%
        width 100%
        background-image linear-gradient(to bottom, rgba(white, 0.3) 0%, rgba(white, 0.3) 80%, rgba(white, 0) 100%)

        &.border-grad-down
            &:before, &:after
                height 200px

    h2
        text-shadow 0 0 5px white, 0 0 5px white, 0 0 2px white
        color #000000
        letter-spacing -1.21px

    article
        margin 15px 0

        .article-header
            display inline-block
            margin-left -15px
            padding 1px 15px
            // background-image linear-gradient(to right, rgba(#ffffff, 0.7) 0%, rgba(#ffffff, 0.7) 10%, rgba(#313436, 0) 100%)
            text-shadow 0 0 5px white
            color #2e3339
            font-family Aniron
            font-size 15px
            font-weight bold
            line-height 23.89px
            letter-spacing -0.61px
            // border-image linear-gradient(to right, rgba(white, 0.8) 0%, rgba(white, 0) 100%) 1
            border-width 2px 0

            .date
                font-size 19px
                letter-spacing -0.77px

        .article-body
            color #161c21
            font-size 16px
            line-height 27px

        .article-media
            padding 0.5rem 0

        .article-video
            width 100%
            height 440px

        .article-footer
            .article-more
                padding 3px 30px
                color black
                font-size 17px
                line-height 25.07px
                cursor pointer
                opacity 0.6

                &:hover
                    opacity 1


#sidebar
    .sidebar-item
        position relative
        display block
        width 100%
        margin 15px 0

        &:after
            content ''
            position absolute
            top: -14px;
            left: -9px;
            right: -6px;
            bottom 0
            background-image url("./assets/frame-right-img.png")
            background-size 100%
            background-repeat no-repeat

        &:first
            margin-top 0
        &:last
            margin-bottom 0


        &_link
            transition all ease 0.2s
            // box-shadow 1px 1px 2px 0.5px rgba(black, 0.7)
            box-shadow 3px 3px 7px 0.5px rgba(black, 0.7)

            & > img
                width 100%
                height auto

            &:hover
                transform scale(1.05)
                box-shadow 2px 2px 15px 0.5px rgba(black, 0.7)


#server-status
    background rgba(white, 0.5)
    padding 15px
    // line-height 60px

    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
    color: #3bef54;
    font-family: Aniron;
    font-size: 15px;
    font-weight: 700;
    letter-spacing: -0.61px;
