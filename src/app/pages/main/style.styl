$root = "../../../"
@require $root + "app/utils.styl"

#viewport
    position relative
    background url($root + "assets/images/bg-clouds.png")
    background-repeat repeat
    background-position-x -100px
      // perspective 1px

.bg-top
    position absolute
    top 0
    left 0
    width 100%

.bg-bottom
    position absolute
    bottom 0
    left 0
    width 100%

.main-block
    padding 15px 0

#btn-play
    display inline-block
    margin-top -15px
    sprite("./assets/btn-play.png", 1, 3, 1)
    width 522px
    height 129px
    // width 534px * 0.8
    // height 135px * 0.8

    &:hover
        spriteFrame(1, 3, 2)

    &:active
        spriteFrame(1, 3, 3)
        transform translateY(2px)

#carousel
    height calc(100vh - 240px)

#content
    margin-top 15px
    height 150vh
    // min-height 1000px

#news
    .block
        background-image linear-gradient(to bottom, rgba(#ffffff, 0.45) 0%, rgba(#ffffff, 0.45) 80%, rgba(#313436, 0) 100%)

#sidebar
    .sidebar-item
        display block
        width 100%
        margin 15px 0

        &:first
            margin-top 0
        &:last
            margin-bottom 0


        &_link
            transition all ease 0.2s

            & > img
                width 100%
                height auto

            &:hover
                transform scale(1.05)
                box-shadow rgba(black, 0.7) 1px 1px 15px 0.5px



#server-status
    background rgba(white, 0.5)
    padding 15px
    // line-height 60px

    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
    color: #3bef54;
    // font-family: Aniron;
    font-size: 15px;
    font-weight: 700;
    letter-spacing: -0.61px;


#footer
    margin-top 15px
    height 100px
    // min-height 100px

    .bg-panel
        background-image linear-gradient(to bottom, rgba(#ffffff, 0.45) 0%, rgba(#313436, 0) 100%)

    .border-panel
        &:before, &:after
            background-image linear-gradient(to bottom, rgba(white, 0.6) 0%, rgba(#313436, 0) 100%)
