$root = "../../"

.font-header
    font-family "Trajan Pro 3"
    color #f7f8f8

.font-trajan
    font-family "Trajan Pro 3"

// --- page backgrounds ---
.bg-top
    position absolute
    top 0
    left 0
    width 100%

.bg-bottom
    position absolute
    bottom 0
    left 0
    width 100%

// --- bg clip ---
.bg-clip-text, .bg-clip-text-after:after, .bg-clip-text-before:before
    -webkit-background-clip text
    -webkit-text-fill-color transparent

// --- gradients ---
.bg-grad-down
    background-image linear-gradient(to bottom, rgba(white, 0.4) 0%, rgba(white, 0) 100%)
    background-repeat no-repeat

.bg-grad-right
    background-image linear-gradient(to right, rgba(white, 0.4) 0%, rgba(white, 0) 100%)
    background-repeat no-repeat

.bg-grad-center
    background-image linear-gradient(to right, rgba(white, 0) 0%, rgba(white, 0.4) 50%, rgba(white, 0) 100%)
    background-repeat no-repeat

// --- border gradients
.border-grad-down
    position relative
    border-top 2px solid rgba(white, 0.8)

    &:before, &:after
        content ""
        position absolute
        top -2px
        width 2px
        height 100%
        background-image linear-gradient(to bottom, rgba(white, 0.8) 0%, rgba(white, 0) 100%)
        background-repeat no-repeat

    &:before
        left 0
    &:after
        right 0

.border-grad-right
    position relative

    &:before, &:after
        content ""
        position absolute
        left 0
        right 0
        height 2px
        background-image linear-gradient(to right, rgba(white, 0.8) 0%, rgba(#313436, 0) 100%)
        background-repeat no-repeat

    &:before
        top 0
    &:after
        bottom 0

.border-grad-center
    position relative

    &:before, &:after
        content ""
        position absolute
        left 0
        right 0
        height 2px
        background-image linear-gradient(to right, rgba(white, 0) 0%, rgba(white, 0.8) 50%, rgba(white, 0) 100%)
        background-repeat no-repeat

    &:before
        top 0
    &:after
        bottom 0
