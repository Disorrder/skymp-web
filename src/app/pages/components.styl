$root = "../../"

.font-header
    font-family "TrajanPro3-Regular"
    color #f7f8f8

#navbar
    .navbar-nav
        padding-right 0
        text-shadow 2px 2px 2px rgba(10, 19, 19, 0.57)
        color #f7f8f8
        font-size 15px
        font-family "TrajanPro3-Regular"

    .navbar-brand
        display block
        width 88px
        height 76px
        background-image url($root+"assets/logo/logo-white.png")
        background-size 100%

        &:hover
            background-image url($root+"assets/logo/logo-moon.png")


    .nav-link
        flex-grow 1
        float left
        color inherit

// --- backgrounds ---
.bg-panel
    background-image linear-gradient(to bottom, rgba(white, 0.45) 0%, rgba(#313436, 0) 100%)
    background-repeat no-repeat

    &-big
        background-image linear-gradient(to bottom, rgba(white, 0.45) 0%, rgba(white, 0.45) 80%, rgba(#313436, 0) 100%)
        background-repeat no-repeat

.border-panel
    position relative
    border-top 2px solid rgba(white, 0.8)

    &:before, &:after
        content ""
        position absolute
        top -2px
        width 2px
        height 100%
        background-image linear-gradient(to bottom, rgba(white, 0.6) 0%, rgba(#313436, 0) 100%)

    &:before
        left 0
    &:after
        right 0

    &_big
        &:before, &:after
            height 180px
