body
    min-height: 100vh
    background: #FAFAFA
    font-family: 'Ubuntu', sans-serif
    color: white
    // font-size: 14px

// [ui-sref], [ng-click]
//     cursor: pointer

[disabled]
    cursor: not-allowed

ul
    list-style: none
    padding-left: 0

a
    color: inherit
    // text-decoration: underline

.ru-quotes
    &:before
        content: '“'
    &:after
        content: '”'

// .no-gutter > [class*="col-"], [class*="col-"].nopadding
//     padding-left: 0 !important
//     padding-right: 0 !important

.space-l, .space-lr
    &:before
        content: ' '
.space-r, .space-lr
    &:after
        content: ' '

.vertical-center
    display table

    .align-item
        display table-cell
        height 100%
        vertical-align middle

.vertical-center-flex
    display: flex
    align-items: center
    height: 100%

// --- bacgrounds ---
for i in (0..10)
    .bg-{i}
        background rgba( hue(#bed, i*360/10), 0.7 )
        // background rgba( mix(#fff, #bed, 20*i), 0.5 )

.bg-block
    background rgba(255, 255, 255, 0.2)

.bg-tea
    background rgba(187, 238, 221, 0.1)
