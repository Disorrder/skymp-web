$root = "../../../"

#navbar
    .navbar-nav
        padding-right 0
        text-shadow 2px 2px 2px rgba(10, 19, 19, 0.57)
        color #f7f8f8
        font-size 15px
        font-family "TrajanPro3-Regular"

    .navbar-brand
        display block
        width 132px
        height 114px
        background-image url($root+"assets/logo/logo-white.png")
        background-size 100%

        &:hover
            background-image url($root+"assets/logo/logo-moon.png")


    .nav-link
        flex-grow 1
        float left
        opacity 0.7
        transition opacity ease 0.2s

        &:hover, &.active
            opacity 1
