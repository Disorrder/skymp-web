header()
    margin 0.5rem 0
    margin-left -2px
    padding 0.25em 1rem
    padding-bottom 0
    line-height 1em

    background-image linear-gradient(to right, rgba(white, 0.4) 0%, rgba(white, 0) 100%)
    background-repeat no-repeat

    border 2px solid
    border-image linear-gradient(to right, rgba(white, 0.7) 0%, rgba(white, 0) 100%) 1

    color #2e3e3e
    font-family "Trajan Pro 3"
    font-size 32px
    font-weight bold

headerText()
    text-shadow 0 0 11px rgba(255, 255, 255, 0.72)
    background-image linear-gradient(to top, #000000 0%, #447172 100%)
    bgClipText()

button()
    background-color rgba(white, 0.5)
    border 2px solid rgba(white, 0.7)
    border-radius 0

    background-size 120%
    background-repeat no-repeat
    background-position-x center
    background-position-y top
    border-color rgba(white, 0.7)

    color #2e3e3e
    font-family "Trajan Pro 3"
    font-weight bold
    line-height 2em

    cursor pointer

    transition background ease 0.2s

    &:not(:disabled):hover
        background-position-y bottom

    &:not(:disabled):active
        background-color transparent
        box-shadow none

    // &:focus
    //     box-shadow none!important

tile()
    background rgba(white, 0.5)
    border 2px solid
    border-radius 0

    border-image linear-gradient(to bottom, rgba(white, 0.7) 0%, rgba(white, 0) 20%, rgba(white, 0) 80%, rgba(white, 0.7) 100%) 1



.sky-header
    header()

// Inputs
.sky-input
    background-color transparent
    background-image linear-gradient(to right, rgba(white, 0) 10%, rgba(white, 0.3) 50%, rgba(white, 0) 90%)
    background-clip border-box
    border 3px solid transparent
    border-image linear-gradient(to right, rgba(white, 0.7) 0%, rgba(white, 0) 30%, rgba(white, 0) 70%, rgba(white, 0.7) 100%) 1
    border-radius 0

    font-family Aniron
    font-style italic

    transition background ease 0.2s

    &:focus
        background-color rgba(white, 0.2)
        border-color transparent
        box-shadow none

    &.is-invalid,
    .was-validated &:invalid
        border-color transparent
        border-image linear-gradient(to right, rgba(#dc3545, 0.7) 0%, rgba(#dc3545, 0) 30%, rgba(#dc3545, 0) 70%, rgba(#dc3545, 0.7) 100%) 1

    & + .invalid-feedback, & + .valid-feedback
        font-family "Trajan Pro 3"
        font-weight bold
        font-style italic

// Buttons
.sky-btn
    button()

    &.small
        line-height 1.5em

    &.btn-primary
        background-color transparent
        background-image linear-gradient(to bottom, rgba(white, 0.15) 20%, rgba(white, 0.9)) !important

        border-color rgba(white, 0.5)

        &:not(:disabled):hover
            // background-color rgba(white, 0.1)
            background-color transparent
            color currentColor

        &:not(:disabled):active
            background-color rgba(white, 0.2)
            border-color rgba(white, 0.5)

        &:disabled
            opacity 0.7

    &.btn-info
        background-color transparent
        background-image linear-gradient(to right, rgba(white, 0), rgba(white, 0.4), rgba(white, 0.4), rgba(white, 0)) !important
        background-size 90% 100%
        background-position center

        border-image linear-gradient(to right, rgba(white, 0), rgba(white, 0.7), rgba(white, 0)) 1

        &:not(:disabled):hover
            background-color rgba(white, 0.1)
            color currentColor

        &:not(:disabled):active
            background-color rgba(white, 0.2)
            border-color rgba(white, 0.5)

        &:disabled
            opacity 0.7


// Card
.sky-card
    tile()

    .card-title
        header()
        margin-left calc(-1.25rem - 2px)
        margin-right calc(-1.25rem - 2px)

// Modal
.sky-modal
    .modal-content
        tile()

    .modal-header
        border 0
        padding 0

        & > .close
            margin 0

    .modal-title
        header()
        // margin-left calc(-1rem - 2px)

    .modal-footer
        border 0
        justify-content center
